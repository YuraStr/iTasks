!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Authentication"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    %body
    .container
      .content
        .well.sidebar-nav
          %ul.nav.nav-list
          - if !user_signed_in?
            %h2 Sign In
            %li= link_to "Facebook", user_facebook_omniauth_authorize_path
            %li= link_to "Vkontakte", user_vkontakte_omniauth_authorize_path
            %li= link_to "Twitter", user_twitter_omniauth_authorize_path
          %ul.nav
          - if user_signed_in?
            .span9
              = yield
            .span3
            %li= link_to "#{current_user.username} (#{current_user.provider})", current_user.url
            %li= link_to "Sign out", destroy_user_session_path, :method => :delete



